<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:id="@+id/dialog_title"
        android:layout_gravity="left|center_vertical"
        android:textSize="32sp"
        android:text="@string/dialog_nfc_write_title"
        android:textColor="#707070"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="18dp" />

    <View
        android:layout_below="@+id/dialog_title"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/main_green" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_nfc_write_type"
        android:layout_below="@+id/dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:entries="@array/dialog_nfc_write_types" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_nfc_write_selection1"
        android:layout_below="@+id/dialog_nfc_write_type"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_nfc_write_text1"
        android:layout_below="@+id/dialog_nfc_write_selection1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:inputType="text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_nfc_write_text2"
        android:layout_below="@+id/dialog_nfc_write_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:inputType="text" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_nfc_write_check"
        android:layout_below="@+id/dialog_nfc_write_text2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"/>

</RelativeLayout>